<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <h3 class="mb-2 mt-2 ml-2 text-3xl font-semibold justify-self-start">
      Scatch
    </h3>
    <div class="w-full h-screen flex items-start px-20 py-20">
      <div class="w-[25%] flex h-screen flex-col items-start">
        <div class="flex items-center gap-2">
          <h3>sort by</h3>
          <form action="/shop">
            <select class="border-[1px] px-2 py-1" name="sortby" id="">
              <option value="popular">Popular</option>
              <option value="newest">Newest</option>
            </select>
          </form>
        </div>
        <div class="flex flex-col mt-20">
          <a class="block w-fit mb-2" href="">New Collection</a>
          <a class="block w-fit mb-2" href="">All Products</a>
          <a class="block w-fit mb-2" href="">Discounted Products</a>
        </div>
        <div class="mt-32">
          <a class="block w-fit mb-2" href="">Filter by :</a>
          <a class="block w-fit mb-2" href="">Availability</a>
          <a class="block w-fit mb-2" href="">Discount</a>
        </div>
      </div>
      <div class="w-[79%] flex flex-col gap-5 h-screen">
        <div class="flex items-start gap-5">
          <% products.forEach(function(product){ %> <%=console.log(product)%>
          <div class="w-70">
            <div
              class="w-full h-52 flex items-center justify-center bg-[#<%= product.bgcolor %>] rounded-t-md"
            >
              <img
                class="h-[12rem]"
                src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
                alt=""
              />
            </div>
            <div
              class="flex justify-between bg-[#<%= product.panelColor %>] items-center px-4 py-4 text-[#<%= product.textColor %>] rounded-b-md"
            >
              <div>
                <h3><%= product.name %></h3>
                <div class="flex gap-2">
                  <h4>â‚¹ <%= product.price %></h4>
                  <br>
                  <h3>| Discount <%= product.discount %>%</h3>
                </div>
              </div>
              <a
                class="w-7 h-7 flex items-center justify-center rounded-full bg-orange-200 p-1"
                href=""
              >
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 440 512">
                  <!--!Font Awesome Free 6.7.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.-->
                  <path
                    d="M256 80c0-17.7-14.3-32-32-32s-32 14.3-32 32l0 144L48 224c-17.7 0-32 14.3-32 32s14.3 32 32 32l144 0 0 144c0 17.7 14.3 32 32 32s32-14.3 32-32l0-144 144 0c17.7 0 32-14.3 32-32s-14.3-32-32-32l-144 0 0-144z"
                  />
                </svg>
              </a>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
